<footer class="container">
  <div id="footer_content">
    <p>Tinybox Software - Mykal Machon</p>
    <p><a href="mailto:info@tinybox.dev">info@tinybox.dev</a></p>
    <div class="switch">
      <input id="theme" name="theme-slider" type="checkbox" />
      <label for="theme">Theme</label>
    </div>
  </div>
</footer>

<style lang="scss">
  footer {
    padding: var(--size-3);
    border-top: 1px solid var(--gray-6);
  }
  p {
    font-size: smaller;
    margin: var(--size-2) 0;
  }
  .switch {
    position: relative;
    display: inline-block;
    label {
      display: block;
      width: 48px;
      height: 24px;
      text-indent: -150%;
      clip: rect(0 0 0 0);
      color: transparent;
      user-select: none;
      &::before,
      &::after {
        content: "";
        display: block;
        position: absolute;
      }
      &::before {
        width: 100%;
        height: 24px;
        top: 0px;
        background: var(--paper-3);
        border-radius: 24px;
      }
      &::after {
        top: 0px;
        left: 0px;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: var(--ink-2);
        transition: left 0.2s var(--ease-1);
      }
    }
    input:checked + label::after{
      left: 24px;
    }
  }
</style>
