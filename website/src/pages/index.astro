<style lang="scss">
  .centered {
    text-align: center;
  }

  .carousel {
    position: relative;
    width: 100%;
    margin: var(--size-3) 0;
    @media screen and (min-width: 1100px){
      &:after{
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        background: linear-gradient(
          to right,
          rgba(17, 24, 39, 1) 0%,
          rgba(17, 24, 39, 0) 15%,
          rgba(17, 24, 39, 0) 85%,
          rgba(17, 24, 39, 1) 100%
        );
      }
    }
  }

  .carousel-cell {
    border: 1px solid var(--gray-8);
    padding: var(--size-3);
    border-radius: var(--radius-2);
    margin-right: var(--size-3);
    margin: var(--size-3) var(--size-3) var(--size-3) 0;
    width: 60%;
    @media screen and (max-width: 1100px){ width: calc(100% - var(--size-3)); }
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0);
    opacity: 0.5;
    transition: box-shadow 0.3s var(--ease-elastic-5),
      opacity 0.3s var(--ease-elastic-3);
    &.is-selected {
      opacity: 1;
    }
    &:hover {
      border: 1px solid #505dff;
      box-shadow: 0 0 0 3px #505dff;
    }
  }

  .works__list {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: var(--size-3);
    @media screen and (max-width: 1100px) {
      grid-template-columns: 1fr 1fr;
    }

    @media screen and (max-width: 768px) {
      grid-template-columns: 1fr;
    }
  }
</style>
