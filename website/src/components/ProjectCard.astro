---
const { frontmatter, url } = Astro.props.project;
---

<article>
  <div class="card__title">
    <h3>{frontmatter.title}</h3>
  </div>
  <div class="card__content">
    <div class="card__content--tags">
      {
        frontmatter.tags.map((t: string) => (
          <div class="tag" data-tag={t}>
            {t}
          </div>
        ))
      }
    </div>
    <div class="card__content__desc">
      <p>{frontmatter.excerpt}</p>
      <p><a href={url}>Read more</a></p>
    </div>
  </div>
</article>

<style lang="scss">
  article {
    padding: var(--size-3);
    border: 1px solid var(--indigo-7);
    border-radius: var(--radius-2);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    transition: transform 0.3s var(--ease-elastic-5);

    &:hover{
      transform: translateY(-5px);
    }

    h3, p, a {
      // color: var(--gray-1);
    }

    .card__title {
      margin-bottom: var(--size-10);
    }

    .card__content--tags {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: var(--size-3);
    }

    .tag {
      font-size: var(--font-size-sm);
      background: var(--indigo-1);
      color: var(--indigo-7);
      cursor: not-allowed;
      border: 1px solid var(--indigo-7);
      border-radius: var(--radius-round);
      padding: var(--size-1) var(--size-3);
      display: inline;
    }

    &:focus-within {
      // box-shadow:
    }
  }
</style>
